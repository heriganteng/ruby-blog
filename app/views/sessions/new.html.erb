<h1 class="center">Log in</h1>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter password", class: "form-control", autocomplete: "off" %>
  </div>
  <p>
    <%= f.submit "Log in", class: "btn btn-default" %>
  </p>
<% end %>